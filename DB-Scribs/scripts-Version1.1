Create TABLE userig(
	UID int PRIMARY KEY AUTO_INCREMENT,
	nickname varchar(50) ,
    email varchar(100),
   	passphrase char(60)
);

Create TABLE gallery(
	GID int PRIMARY KEY AUTO_INCREMENT,
	galleryname varchar(100) ,
    decription varchar(500),
   	UID int,
    FOREIGN KEY (UID) REFERENCES userig(UID)
);

Create TABLE picture( PID int PRIMARY KEY AUTO_INCREMENT, image blob , Name varchar(100), thumbnail blob, GID int, FOREIGN KEY (GID) REFERENCES gallery(GID) );

Create TABLE tag( TID int PRIMARY KEY AUTO_INCREMENT, tagname varchar(100) );

Create TABLE picturetag(
   PID int,
   TID int,
   FOREIGN KEY (PID) REFERENCES Picture(PID),
   FOREIGN KEY (TID) REFERENCES Tag(TID));
