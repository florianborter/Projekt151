Create TABLE UserIG(
	UID int PRIMARY KEY,
	nickname varchar(50) ,
    email varchar(100),
   	passphrase char(60)
);

Create TABLE gallery(
	GID int PRIMARY KEY,
	name varchar(100) ,
    decription varchar(500),
   	UID int,
    FOREIGN KEY (UID) REFERENCES userig(UID)
);

Create TABLE Picture( PID int PRIMARY KEY, image blob , Name varchar(100), thumbnail blob, GID int, FOREIGN KEY (GID) REFERENCES gallery(GID) );

Create TABLE Tag( TID int PRIMARY KEY, tagname varchar(100) );

Create TABLE PictureTag(
   PID int,
   TID int,
   FOREIGN KEY (PID) REFERENCES Picture(PID),
   FOREIGN KEY (TID) REFERENCES Tag(TID));
