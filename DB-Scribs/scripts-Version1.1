Create TABLE userig(
	UID int PRIMARY KEY AUTO_INCREMENT,
	nickname varchar(50) ,
    email varchar(100),
   	passphrase char(60)
);

Create TABLE gallery(
	GID int PRIMARY KEY AUTO_INCREMENT,
	galleryname varchar(100) ,
    decription varchar(500),
   	UID int,
    FOREIGN KEY (UID) REFERENCES userig(UID) ON DELETE CASCADE
);

Create TABLE picture(
    PID int PRIMARY KEY AUTO_INCREMENT,
    path varchar(100) ,
    picturename varchar(100),
    GID int,
    FOREIGN KEY (GID) REFERENCES gallery(GID) ON DELETE CASCADE
);

Create TABLE tag(
    TID int PRIMARY KEY AUTO_INCREMENT,
    tagname varchar(100)
);

Create TABLE picturetag(
   PID int,
   TID int,
   FOREIGN KEY (PID) REFERENCES Picture(PID) ON DELETE CASCADE,
   FOREIGN KEY (TID) REFERENCES Tag(TID) ON DELETE CASCADE
);
